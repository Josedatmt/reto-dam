<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" alignment="TOP_LEFT" style="-fx-background-color: #f8fafc; -fx-padding: 30;">


    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 25;" spacing="15" prefWidth="600">


        <VBox spacing="5">
            <Label fx:id="lblTitulo" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
            <Label fx:id="lblEmpresa" style="-fx-font-size: 18px; -fx-text-fill: #3498db; -fx-font-weight: bold;"/>
            <Label fx:id="lblFecha" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        </VBox>

        <VBox spacing="15">
            <Label text="DESCRIPCIÃ“N:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
            <TextArea fx:id="txtDescripcion" editable="false" wrapText="true" prefRowCount="5"
                      style="-fx-background-color: transparent; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Label text="DETALLES ADICIONALES:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
            <TextArea fx:id="txtDetalles" editable="false" wrapText="true" prefRowCount="5"
                      style="-fx-background-color: transparent; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-padding: 10; -fx-font-size: 14px;"/>
        </VBox>


        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0;">
            <Button text="VOLVER"
                    style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-border-color: #64748b; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 25; -fx-font-weight: bold; -fx-cursor: hand;"
                    />

            <Button text="APLICAR"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 10 25; -fx-cursor: hand;"
                    />
        </HBox>
    </VBox>
</VBox>