<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      spacing="15" prefWidth="400" alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Formulario de Empresa"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <TextField fx:id="txtRazonSocial" promptText="Razón Social"
               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

    <TextField fx:id="txtDireccion" promptText="Dirección Fiscal"
               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

    <TextField fx:id="txtPais" promptText="País"
               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

    <HBox spacing="15" alignment="CENTER">
        <Button text="Guardar" defaultButton="true"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" />
        <Button text="Cancelar"
                style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" />
    </HBox>
</VBox>
