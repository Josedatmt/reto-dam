<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            style="-fx-background-color: linear-gradient(to bottom, #f6f7f9, #e9ebee);">


    <top>
        <HBox style="-fx-background-color: linear-gradient(to right, #3498db, #2c3e50); -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 0, 5, 10, 0);">
            <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">

            </ImageView>

            <Label text="GESTIÓN DE VACANTES"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 15;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Inicio" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;"/>

                <Button text="Categorías" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;"
                       />

                <Button text="Empresas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;"
                        />

                <Button text="Usuarios" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;"
                       />

                <Button text="Vacantes" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;"
                      />
            </HBox>
        </HBox>
    </top>


    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="30">
                <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">

                    <effect>
                        <Glow level="0.3"/>
                    </effect>
                </ImageView>

                <Label text="BIENVENIDO AL SISTEMA"
                       style="-fx-font-size: 36px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, 2, 3, 0);"/>

                <Label text="Gestión profesional de vacantes laborales"
                       style="-fx-font-size: 20px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>

                <HBox spacing="30" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                    <Button text="Acceso Rápido"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 6; -fx-cursor: hand;"
                       />

                    <Button text="Configuración"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 6; -fx-cursor: hand;"
                     />
                </HBox>
            </VBox>
        </StackPane>
    </center>


    <bottom>
        <HBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db); -fx-padding: 12;" alignment="CENTER">
            <Label text="© 2025 SISTEMA DE VACANTES PROFESIONAL | Versión 1.0 | Usuario: ADMINISTRADOR"
                   style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>