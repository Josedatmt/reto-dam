<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-padding: 25; -fx-background-color: #f8fafc;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 20 0;">
            <Label text="GestiÃ³n de Vacantes" style="-fx-font-size: 22px; -fx-text-fill: #1e293b; -fx-font-weight: bold;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.05)" radius="3" spread="0.3" />
                </effect>
            </Label>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableVacantes" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e2e8f0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
            <columns>
                <TableColumn text="ID" style="-fx-font-size: 14px; -fx-alignment: CENTER;"/>
                <TableColumn text="Nombre" style="-fx-font-size: 14px;"/>
                <TableColumn text="Estatus"  style="-fx-font-size: 14px; -fx-alignment: CENTER;">
                    <!-- Celda condicional para colorear el estatus -->
                    <cellFactory>
                        <TableColumn fx:constant="DEFAULT_CELL_FACTORY" />
                    </cellFactory>
                </TableColumn>
                <TableColumn text="Empresa"  style="-fx-font-size: 14px;"/>
            </columns>

            <style>
                -fx-selection-bar: #2563eb;
                -fx-selection-bar-non-focused: #cbd5e1;
                -fx-table-cell-border-color: transparent;
                -fx-table-header-border-color: transparent;
            </style>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
            <Button text="Cancelar Vacante"
                    style="-fx-background-color: transparent; -fx-text-fill: #dc2626; -fx-border-color: #dc2626; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-size: 14px;"
                />

            <Button text="Nueva Vacante"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 20; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px;"
                   />
        </HBox>
    </bottom>
</BorderPane>