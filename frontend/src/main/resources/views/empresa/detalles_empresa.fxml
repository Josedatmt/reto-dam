<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.frontend.controller.DetallesEmpresaController"
      spacing="10" style="-fx-padding: 20; -fx-min-width: 400;">

    <Label text="Detalles de Empresa" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Dirección:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="lblDireccion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="País:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="lblPais" GridPane.rowIndex="2" GridPane.columnIndex="1"/>


    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cerrar" onAction="#handleCerrar"
                style="-fx-background-color: #636e72; -fx-text-fill: white;"/>
    </HBox>
</VBox>